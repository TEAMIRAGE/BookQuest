<%- include('header.ejs') %>

<section class="cover bg-customColorBlack w-full h-screen">
    <div class="h-full">
        <img src="../images/bg3.jpg" class="cover blur-[6px] w-full h-full opacity-40">
    </div>
    <div class="flex flex-col justify-center items-center absolute top-0 left-0 right-0 bottom-0">
        <div
            class="border-4 bg-white w-2/3 border-solid border-white xsm:m-4 p-2 md:px-10 py-6 rounded-xl flex-col justify-center items-center">
            <form class="test-form" action="/api/new-book-registration" method="post" enctype="multipart/form-data">
                <div class="flex justify-center mb-4">
                    <h5 class="text-3xl font-bold">New Book Registration</h5>
                </div>

                <div class="mb-4 flex justify-between">
                    <div class="div-test w-1/2 mx-2">
                        <input type="text" name="name" placeholder="Book name"
                            class="border border-blue-800 px-4 py-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required />
                    </div>
                    <div class="div-test w-1/2 mx-2">
                        <input type="text" name="author" placeholder="Author"
                            class="border border-blue-800 px-4 py-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required />
                    </div>
                </div>

                <div class="div-test mb-4 flex">
                    <div class="w-full mx-2">
                        <select name="option"
                            class="border border-blue-800 px-4 py-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required>
                            <option disabled selected>Choose Genre</option>
                            <option value="fiction">Fiction</option>
                            <option value="biography">Biography</option>
                            <option value="history">History</option>
                            <option value="science">Science</option>
                            <option value="comic">Comic</option>
                            <option value="1st_year">1st year</option>
                            <option value="2nd_year">2nd year</option>
                            <option value="3rd_year">3rd year</option>
                            <option value="4th_year">4th year</option>
                        </select>
                    </div>
                </div>

                <div class="div-test flex mb-4">
                    <textarea rows="4" cols="80" maxlength="500" name="description" placeholder="Description"
                        class="mx-2 border border-blue-800 px-4 py-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                        style="resize: none;" required></textarea>
                </div>

                <div class="fileUpload-block mb-4 flex flex-col w-auto">
                    <p class="mb-1 text-lg font-bold mx-2">Upload Book Image</p>
                    <input type="file" name="file"
                        class="mx-2 border border-blue-800 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <div class="button mb-4 mt-8 flex justify-center w-auto">
                    <input type="submit" value="Register"
                        class="bg-blue-500 w-full text-white font-semibold px-4 py-2 rounded-md hover:bg-blue-600 cursor-pointer">
                </div>
            </form>
        </div>
    </div>
</section>

<%- include('footer.ejs') %>