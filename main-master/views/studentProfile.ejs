<%- include('header.ejs') %>
<section class="bg-customColorBlack w-full h-auto text-white">
    <div class="pt-32 pb-12 text-black flex flex-col items-center">
        <p class="text-3xl sm:text-5xl lg:text-6xl mx-32 text-white font-bold">Student Profile</p>
    </div>
    <div class="flex justify-center w-full">
        <div class="flex w-1/2 rounded-xl bg-white text-black p-8">
            <div class="w-1/4 mx-2">
                <div class="test-block">
                    <img src="<%= studentInfo.profileUrl %>" alt="Image" class="rounded-lg cover w-full h-full" />
                </div>
            </div>
            <div class="w-3/4 mx-2">
                <div class="test-block">
                    <h3 class="text-xl font-bold m-2">Name: <%= studentInfo.name %></h3>
                </div>

                <div class="test-block">
                    <h3 class="text-xl font-bold m-2">Roll No: <%= studentInfo.roll_no %></h3>
                </div>

                <div class="test-block">
                    <h3 class="text-xl font-bold m-2">Year: <%= studentInfo.year %></h3>
                </div>

                <div class="test-block">
                    <h3 class="text-xl font-bold m-2">Branch: <%= studentInfo.branch %></h3>
                </div>

                <div class="test-block">
                    <h3 class="text-xl font-bold m-2">Email: <%= studentInfo.email %></h3>
                </div>
            </div>
        </div>
    </div>

    <div class="p-12 text-black flex flex-col items-center">
        <p class="text-3xl sm:text-5xl lg:text-6xl mx-32 text-white font-bold">Book Collection</p>
    </div>
    <div class="flex justify-center">
        <div class="collections mb-8 text-black bg-white w-4/5">
            <div class="p-8 sm:py-12 lg:py-8 flex flex-wrap justify-between">
                <% if (studentInfo.collectionStatus === 2 && details_all && details_all.length > 0) { %>
                <% details_all.forEach((info) => { %>
                <a href="/specific-book-student/<%= info.id %>"
                    class="flex flex-col items-center m-2 bg-gray-800 rounded-b-xl border border-black xsm:w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/6 duration-500 hover:scale-110">
                    <div class="bg-white w-full flex justify-center p-4">
                        <img class="rounded-lg h-60 w-40 object-cover" src="<%= info.signedURL %>" alt="Image" />
                    </div>
                    <div class="p-5">
                        <h5 class="mb-2 text-xl font-bold text-center text-white">ID: <%= info.manualID %></h5>
                    </div>
                </a>
                <% }); %>
            </div>
            <% } else if (studentInfo.collectionStatus === 1 && bookInfo) { %>
            <a href="/specific-book-student/<%= bookInfo.id %>"
                class="flex flex-col items-center m-2 bg-gray-800 rounded-b-xl border border-black xsm:w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/6 duration-500 hover:scale-110">
                <div class="bg-white w-full flex justify-center p-4">
                    <img class="rounded-lg h-60 w-40 object-cover" src="<%= bookInfo.imageLink %>" alt="Image" />
                </div>
                <div class="p-5">
                    <h5 class="mb-2 text-xl font-bold text-center text-white">ID: <%= bookInfo.manualId %></h5>
                </div>
            </a>
            <% } else { %>
            <h3>No books in collections! </h3>
            <% } %>
        </div>
    </div>
</section>

<%- include('footer.ejs') %>
